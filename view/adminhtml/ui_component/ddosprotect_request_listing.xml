<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">ddosprotect_request_listing.ddosprotect_request_listing_data_source</item>
            <item name="deps" xsi:type="string">ddosprotect_request_listing.ddosprotect_request_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">ddosprotect_request_columns</item>
    </argument>
    <dataSource name="ddosprotect_request_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Customer\Ui\Component\DataProvider</argument>
            <argument name="name" xsi:type="string">ddosprotect_request_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">entity_id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="ddosprotect_request_columns">
        <column name="entity_id">
            <settings>
                <filter>text</filter>
                <label translate="true">ID</label>
            </settings>
        </column>
        <column name="ip_address">
            <settings>
                <filter>text</filter>
                <label translate="true">IP Address</label>
            </settings>
        </column>
        <column name="request_count">
            <settings>
                <filter>text</filter>
                <label translate="true">Request Count</label>
            </settings>
        </column>
        <column name="last_request_time">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Last Request Time</label>
            </settings>
        </column>
    </columns>
</listing>
